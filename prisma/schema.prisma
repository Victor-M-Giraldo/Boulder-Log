generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  firstName String
  lastName  String
  createdAt DateTime   @default(now())
  climbs    Climb[]
  Progress  Progress[]
}

model Climb {
  id        Int      @id @default(autoincrement())
  name      String
  grade     String
  location  String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  notes     Note[]
}

model Note {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  climbId   Int
  climb     Climb    @relation(fields: [climbId], references: [id])
}

model Progress {
  id           Int      @id @default(autoincrement())
  userId       Int
  user         User     @relation(fields: [userId], references: [id])
  totalClimbs  Int
  hardestGrade String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
